
<div class="contentMain">
    <div class="HeaderMain">
        <h2 class="headerTitle">Choose the service you need</h2>

    </div>
    <div class="FormeInfo">
        <EditForm EditContext="_editContext" OnSubmit="HandleFormSubmit" class="space-y-6">
            <DataAnnotationsValidator />
            <div class="rowForm">
                <InputText @bind-Value=UserIdentityForm.FirstName class="inputValidate" placeholder="Name" data-valid="empty" type="text"/>

            </div>
            <div class="rowForm">
                <InputText @bind-Value=UserIdentityForm.Company class="inputValidate" placeholder="Company name" data-valid="empty" type="text"/>

            </div>
            <div class="rowForm">
               <InputText @bind-Value=UserIdentityForm.Mobile class="inputValidate" placeholder="Mobile number" data-valid="mobile" type="text"/>
@*               <input type="number" pattern="[-+]?[0-9]*[.,]?[0-9]+" class="inputValidate" @bind=UserIdentityForm.Mobile placeholder="شماره موبایل" data-valid="mobile"/>
*@            </div>
            <div class="rowForm">
                <InputText @bind-Value=UserIdentityForm.Email class="inputValidate" placeholder="Email" data-valid="email" type="text"/>

            </div>
            <div class="rowForm">
                <button type="submit" class="btnforme BtnValidate">Select service<i class="fa fa-angle-right" aria-hidden="true"></i></button>
            </div>
        </EditForm>
    </div>

</div>
